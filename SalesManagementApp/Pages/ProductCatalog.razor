@page "/ProductCatalog"
@attribute [Authorize(Roles ="SR")]
@using Syncfusion.Blazor.DropDowns
@using Syncfusion.Blazor.Inputs
@using Syncfusion.Blazor.Lists
@using Syncfusion.Blazor.Notifications
@using System.Globalization
@inject IProductService ProductService
@inject IClientService ClientService
@inject IOrderService OrderService

<h3>Product Catalog</h3>

<div class="col-lg-4 control-section">
    <SfToast @ref="ToastObj" ID="toast_type">
        <ToastPosition X="@ToastPosition"></ToastPosition>
    </SfToast>
</div>
<div class="row mt-3">    
    <div class="col-12">
        <SfComboBox CssClass="client-combo" DataSource="ClientData" TValue="int" TItem="ClientModel"
            @bind-Value="ClientId">
            <ComboBoxFieldSettings Text="RetailOutletName" Value="Id"></ComboBoxFieldSettings>
        </SfComboBox>
    </div>
</div>
<div class="row mt-3">
    <div class="col-12">
        <SfTextBox CssClass="filter-text" Placeholder="Filter Products" Input="@OnInput"></SfTextBox>
    </div>
</div>
<div class="row mt-1">
    <div class="col-12">
        <SfListView @ref="SfProductsLV" ShowCheckBox="true" DataSource="ProductData" CssClass="e-list-template listview-template">
            <ListViewFieldSettings TValue="ProductModel" Id="Id" Text="Name"
                GroupBy="CategoryName"></ListViewFieldSettings>
            <ListViewTemplates TValue="ProductModel">
                <Template>
                    <div class="e-list-wrapper e-list-multi-line">
                        <span class="e-list-content">
                            <img src="@context.ImagePath" class="img-class">
                        </span>
                        <span class="e-list-content"><h5>@context.Name</h5></span>
                        <span class="e-list-content"><b>@context.Price.ToString("C", CultureInfo.CreateSpecificCulture("da-US"))</b></span>
                        <span class="e-list-content">@context.Description</span>
                    </div>
                </Template>
                <GroupTemplate>
                    <h4>@context.Text</h4>
                </GroupTemplate>
            </ListViewTemplates>
        </SfListView>
    </div>
</div>
<div class="row mt-4">
    <div class="col-6">
        <button class="btn btn-outline-dark" @onclick="()=>(CreateOrder())">
            Create Order
        </button>
               
    </div>
</div>

<style>
    .listview-template{
        border-radius: 2px;
        height: 470px;
        box-shadow: 0 3px 6px rgba(0, 0, 0, 0.16), 0 3px 6px rgba(0, 0, 0, 0.23);
        padding:20px;
    }
    .img-class{
        height:90px;
        width:150px;
    }
    .client-combo,.filter-text,.listview-template{
        max-width:800px;
    }

/*Toast Related*/
    @@font-face {
        font-family: 'Toast_icons';
        src: url(data:application/x-font-ttf;charset=utf-8;base64,) format('truetype');
        font-weight: normal;
        font-style: normal;
    }
    #toast_types button {
        margin: 5px;
        min-width: 160px;
        max-width: 160px;
    }
    .toast-icons {
        font-family: 'Toast_icons' !important;
        speak: none;
        font-size: 55px;
        font-style: normal;
        font-weight: normal;
        font-variant: normal;
        text-transform: none;
        line-height: 1;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
    }
    #toast_type .e-toast-icon.e-icons {
        height: auto;
        font-size: 30px;
    }
    .bootstrap5 #toast_type .e-toast-icon.e-icons,
    .bootstrap5-dark #toast_type .e-toast-icon.e-icons {
        height: 25px;
    }
    .toast-icons.e-success::before {
        content: "\e701";
    }
    .toast-icons.e-error::before {
        content: "\e700";
    }
    .toast-icons.e-info::before {
        content: "\e704";
    }
    .toast-icons.e-warning::before {
        content: "\e703";
    }
    #toast_types {
        text-align: center;
    }

</style>

@code {

    private SfListView<ProductModel> SfProductsLV { get; set; }

    private int ClientId { get; set; } = 1;
    private List<ProductModel> ProductData { get; set; }
    private List<ProductModel>? ProductCollectionFilter;
    private List<ClientModel> ClientData{ get; set; }

    private SfToast? ToastObj;
    private string ToastPosition = "Right";
    private List<ToastModel> Toast = new List<ToastModel>
    {
        new ToastModel{ Title = "Warning!", Content="There was a problem with your network connection.", CssClass="e-toast-warning", Icon="e-warning toast-icons" },
        new ToastModel{ Title = "Success!", Content="Your order has been created successfully.", CssClass="e-toast-success", Icon="e-success toast-icons" },
        new ToastModel{ Title = "Error!", Content="A problem occurred while creating your order.", CssClass="e-toast-danger", Icon="e-error toast-icons" },
        new ToastModel{ Title = "Information!", Content="Please read the comments carefully.", CssClass="e-toast-info", Icon="e-info toast-icons" }
    };

    protected override async Task OnInitializedAsync()
    {
        ProductData = await ProductService.GetProducts();
        ProductCollectionFilter = ProductData;
        ClientData = await ClientService.GetClients();
    }
    void OnInput(InputEventArgs eventArgs)
    {
        if (eventArgs.Value != "")
        {
            ProductData = ProductCollectionFilter?.FindAll(e => e.Name.StartsWith(eventArgs.Value));
        }
        else
        {
            ProductData = ProductCollectionFilter;
        }


    }

    protected async Task CreateOrder()
    {
        try
        {
            SelectedItems<ProductModel> productsOrdered = await SfProductsLV.GetCheckedItemsAsync();

            if(productsOrdered.Data.Count() > 0)
            {
                List<OrderItem> orderItems = (from p in productsOrdered.Data
                                              select new OrderItem
                                              {
                                                  ProductId = p.Id,
                                                  Price = p.Price,
                                                  Qty = 1
                                              }).ToList();

                OrderModel orderModel = new OrderModel
                {
                    ClientId = ClientId,
                    OrderItems = orderItems
                };

                await OrderService.CreateOrder(orderModel);
                await this.ToastObj.Show(Toast[1]);
            }
        }
        catch (Exception)
        {
            await this.ToastObj.Show(Toast[2]);
           // throw;
        }
    }
}
